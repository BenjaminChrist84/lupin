<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="BarlowSemiCondensedBoldStyle" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/barlow_semi_condensed_bold</item>
    </style>

    <style name="TitleStyle" parent="BarlowSemiCondensedBoldStyle">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="HeaderStyle" parent="TitleStyle">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TitleStyle">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="SubTitleStyle" parent="BarlowSemiCondensedBoldStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="BarlowMediumStyle" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/barlow_medium</item>
    </style>

    <style name="BodyStyle" parent="BarlowMediumStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

</resources>
